<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="category"
            type="com.gutenberg.books.data.model.Category" />

        <variable
            name="clickListener"
            type="com.gutenberg.books.ui.category_list.CategoryListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:onClick="@{()->clickListener.onClick(category)}"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="4dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:imageView="@{category.categoryIcon}"
                tools:src="@drawable/drama" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/icon"
                android:drawablePadding="20dp"
                android:text="@{category.categoryName}"
                android:textAllCaps="true"
                tools:text="DRAMA" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>